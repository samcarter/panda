\NewExpandableDocumentCommand{\CleverPanda}{m}{
  \dim_eval:n {
    \fp_eval:n {
      \tl_if_blank:nTF { #1 } { \CleverPanda@scale } { #1 }
      *
      \CleverPanda@factor
    }
    \tex_fontcharht:D \tex_font:D `.
  }
}

\NewExpandableDocumentCommand{\CleverPandaGet}{m}{
  \dim_eval:n {
    \fp_eval:n {
      \tl_if_blank:nTF { #1 } { \CleverPanda@scale } { #1 }
      *
      \CleverPanda@factor
    }
    \CleverPanda@stroke
  }
}

